@model IEnumerable<OnlineShoppingMVC.Models.Order>

<h2>Your Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>₱@order.TotalAmount</td>
                <td>@(order.OrderItems?.Sum(oi => oi.Quantity) ?? 0)</td> 
                <td>₱@(order.OrderItems?.Sum(oi => oi.Price * oi.Quantity) ?? 0)</td> 
                <td>Processing</td> 
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
